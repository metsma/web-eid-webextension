{
  "manifest_version": 2,
  "name": "Web eID",
  "version": "{{package.version}}",

  "description": "",

  "browser_specific_settings": {
    "gecko": {
      "id": "web-eid-webextension-DEVELOPMENT-MODE-MOCK-ID@web-eid.eu"
    }
  },

  "icons": {
    "128": "icons/web-eid-poc-icon-128.png"
  },

  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "*://*/*"
      ]

    }
  ],

  "browser_action": {
    "default_icon": "icons/web-eid-poc-icon-128.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "*://*/*",
    "webRequest",
    "webRequestBlocking",
    "nativeMessaging"
  ]
}

{
  "manifest_version": 2,
  "name": "Web eID",
  "version": "{{package.version}}",

  "description": "",

  "browser_specific_settings": {
    "gecko": {
      "id": "{89bcad3c-5c95-4a6c-a5a5-64da932f6bf7}",
      "update_url": "https://web-eid.eu/files/firefox/firefox-web-eid-extension-updates.json"
    }
  },

  "icons": {
    "128": "icons/web-eid-poc-icon-128.png"
  },

  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "*://*/*"
      ]

    }
  ],

  "browser_action": {
    "default_icon": "icons/web-eid-poc-icon-128.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "*://*/*",
    "webRequest",
    "webRequestBlocking",
    "nativeMessaging"
  ]
}
